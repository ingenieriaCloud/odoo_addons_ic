<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

      <record id="view_product_update_price_wizard" model="ir.ui.view">
	<field name="name">Update product sale price</field>
        <field name="model">product.update_price_wizard</field>
        <field name="arch" type="xml">

	  <form string="Actualiza precio de venta">
	    <group string="Selección de tarifa">
	      <field name="pricelist" />
	    </group>

	    <footer>
	      <button type="object" name="do_mass_update"
		      string="Actualizar precios" class="oe_highlight" />
	      <button special="cancel" string="Cancel"/>
	    </footer>  
	  </form>
	</field>
      </record>
      
      <!-- Botón de menú Más -->
      <act_window name="Actualizar precios para exportar"
            res_model="product.update_price_wizard"
            src_model="product.template"
            view_mode="form"
            target="new"
            multi="True"
            key2="client_action_multi"
            id="action_product_update_price_wizard" />

      
    </data>
</openerp>
